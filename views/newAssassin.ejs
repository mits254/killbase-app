            </tr>
            <tr>
                <td>Price : </td>
                <td><input type="text" name="price" required='true' placeholder="integer only"></td>
            </tr>
            <tr>
                <td>Rating : </td>
                <td><input type="text" name="rating" required='true' placeholder="integer only"></td>
            </tr>
            <tr>
                <td>Kills : </td>
                <td><input type="text" name="kills" required='true' placeholder="integer only"></td>
            </tr>
