<% include header.ejs %>
<body style='background-color:lightgray'>
    <h2 style="text-align:center;font-style: italic;
    font-family: cursive;font-weight: bold">NEW ASSASSIN</h2>
    <form name="form1" method="POST" action="/newAssassin/add">
        
        <table align='center'>
            <tr>
                <td>PHOTO : </td>
                <td><input type="text" name="photo" ></td><br>
            </tr>
            <tr>
                <td>Full name : </td>
                <td><input type="text" name="full_name" required='true'></td>
            </tr>
            <tr>
                <td>Code name : </td>
                <td><input type="text" name="code_names" required='true'></td>
            </tr>
            <tr>
                <td>Weapon : </td>
                <td><input type="text" name="weapon" required='true'></td>
            </tr>
            <tr>
