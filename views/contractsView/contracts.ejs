<!-- including the header -->
<% include ../header.ejs %>
<body style='background-color:lightgray'>
    <div style='justify-content: center;font-style: italic;
    font-family: cursive;font-weight: bold' >
        <h1 style='text-align: center;font-style: italic;
        font-family: cursive;font-weight: bold'>ALL CONTRACTS</h1> <h5 style='float: left'>Total no. of Contracts : <%= contracts.length %> </h5>
        <a href="/newContract" style='left: 15%; position: relative;'><button class='btn btn-danger'>New Contract</button></a>
        <a href="/activeContracts" style='left: 20%; position: relative;'><button class='btn btn-danger'>Active Contract</button></a>
        <a href="/successContracts" style='left: 25%; position: relative;'><button class='btn btn-danger'>Completed Contract</button></a>
        <div class="dropdown" style='float:right;padding-right: 10px;'>
                <button class="dropbtn">Sort By :</button>
                <div class="dropdown-content">
                  <a href="/budget">Budget</a>
                  <a href="/target_security">Target Security</a>
                  
                </div>
        </div>
    </div>
     <!-- making the cards -->
    <span class="container">
        <div class="row">
            <% contracts.forEach(function(contracts){ %>
            <div class="col-lg-3 col-sm-6">
             <a href="/one_contract/<%= contracts.contract_id%> ">    
                <div class="card hovercard">

                    <div class="cardheader">

                    </div>
                    <div class="avatar">
                        <img src='<%=contracts.target_photo %>' style='width:100px'>
                    </div>
                    <div class="info">
                        <!-- getting the values from table contract -->
                        <div class="title">
                            <a target="_blank"><%= contracts.target_name %></a>
                        </div>
                        <p><span style='font-weight: bold'> TARGET LOCATION:</span> <%=  contracts.target_location %></p>
                        <p><span style='font-weight: bold'> TARGET SECURITY:</span> <%=  contracts.target_security %> </p>
                        <p><span style='font-weight: bold'> CLIENT NAME: </span><%= contracts.client_name %></p>
                        <p><span style='font-weight: bold'> BUDGET:</span> <%= contracts.budget %></p>
                        
                    </div>
                    <div>
                        <!-- making the buttons -->
                            <a href="/editContract/<%=contracts.contract_id %>"><button class='btn btn-danger'>EDIT</button></a>
                            <form action="/deleteContract/<%=contracts.contract_id %>?_method=delete" method="POST" style="display:inline-block">
                                <button class='btn btn-danger' type='submit'>Delete</button></form>
                                
                                <a href="/completeContract/<%=contracts.contract_id %>" style=' position: relative;'><button class='btn btn-danger'>Complete</button></a>
                    </div>


                </div>
              </a>
            </div>
            <% }); %>
        </div>

    </span>
    
</body>

</html>