<!-- including the header -->
<% include ../header.ejs %>

<body style='background-color:lightgray'>
    <div style='justify-content: center;font-style: italic;
    font-family: cursive;font-weight: bold'>
        <h1 style='text-align: center;'>ACTIVE CONTRACTS</h1><h5 style='float: left'>Total no. of Contracts: <% let a = 0; %> 
            <% contracts.forEach(function(contracts){ %>
                <% if(contracts.complete === false) { %>
                    <%  a++; %>
                <% } %>
                    <% });%>
                    <%= a %>
        </h5>
        <a href="/newContract" style='float:right; padding-left: 30px'><button class='btn btn-danger'>New Contract</button></a>
        <a href="/successContracts" style='float:right; padding-left: 20px'><button class='btn btn-danger'>Completed Contract</button></a>
        
        
    </div>
    
     <!-- making the active contract cards -->

       <!-- making the cards -->
    <span class="container" style='float:left' align='left'>
            <div class="row">
                <% contracts.forEach(function(contracts){ %>
                    <% if(contracts.complete === false) {%>
                <div class="col-lg-3 col-sm-6">
    
                    <div class="card hovercard">
    
                        <div class="cardheader">
    
                        </div>
                        <div class="avatar">
                            <img src='<%=contracts.target_photo %>' style='width:100px'>
                        </div>
                        <div class="info">
                            <!-- getting the values from table contract -->
                            <div class="title">
                                <a target="_blank"><%= contracts.target_name %></a>
                            </div>
                            <p> TARGET LOCATION: <%=  contracts.target_location %></p>
                            <p> TARGET SECURITY: <%=  contracts.target_security %> </p>
                            <p> CLIENT NAME: <%= contracts.client_name %></p>
                            <p> BUDGET: <%= contracts.budget %></p>
                            
                        </div>
                        <div>
                            <!-- making the buttons -->
                                <a href="/editContract/<%=contracts.contract_id %>"><button class='btn btn-danger'>EDIT</button></a>
                                <form action="/deleteContract/<%=contracts.contract_id %>" method="POST" style="display:inline-block">
                                    <button class='btn btn-danger' type='submit'>Delete</button></form>
                                    
                                    <a href="/completeContract/<%=contracts.contract_id %>" style=' position: relative;'><button class='btn btn-danger'>Complete</button></a>
                        </div>
    
    
                    </div>
    
                </div>
                <% }; %>
                <% }); %>
            </div>
    
        </span>
        
    </body>
    
    </html>